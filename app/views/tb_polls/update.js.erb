<% if @tb_poll.valid? %>
  hideModal();
  if ($(".tb_polls.list").length) {
    $("#<%= dom_id @tb_poll %>").replaceWith("<%= j render(@tb_poll) %>");
    $("#<%= dom_id @tb_poll %>").effect("highlight");
  } else {
    window.location.href = "<%= url_for @tb_poll %>";
  }
<% else %>
  $("#errorExplanation").remove();
  $("<%= j error_messages_for("tb_poll") %>").prependTo("#edit_tb_poll_<%= @tb_poll.id %>");
<% end %>